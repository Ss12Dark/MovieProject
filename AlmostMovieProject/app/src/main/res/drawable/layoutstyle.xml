<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#000000">

    <item>
        <shape android:shape="rectangle">

            <gradient
                android:startColor="@color/halfGreen"
                android:centerColor="@color/halfWhite"
                android:endColor="@color/halfRed"
                android:angle="45" />

            <stroke
                android:color="#000000"
                android:width="2dp" />

            <corners
                android:radius="20dp" />

        </shape>

    </item>

</ripple>